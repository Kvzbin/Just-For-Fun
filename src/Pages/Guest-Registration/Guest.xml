.g-main {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 25px 0;
}

.g-child {
    /* background-color: #D8EFD3; */
    border: 2px solid #7D7463;
    width: 70vw;
    height: 70vh;
    border-radius: 17px;
    /* margin-bottom: 47px; */
}

.g-child h1 {
    font-size: 1.2rem;
    text-align: center;
    padding-top: 8px;
}

.g-data1 {
    display: flex;
    gap: 25px;
    padding: 0 20px;
    text-align: start;
}

.gc-data1 {
    display: flex;
    flex-direction: column;
    padding-bottom: 5px;
    font-size: .8em;
    font-weight: 500;
}

.gc-data1 input {
    width: 100%;
    padding: 3px 6px;
    border-radius: 10px;
    border: transparent;
    outline: 0; 
    border-bottom: #E3E1D9 solid 2px;
    margin-top: 2px;
    font-size: small;
}

